<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    <!-- 加载进度条样式设置 -->
    <style name="loading_text">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 下划线view 的 -->
    <style name="more_divider_style">
        <item name="android:background">@drawable/comment_fgximageview</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="loading_pb"></style>
    <!-- 按钮样式设置 -->
    <style name="button_style">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">things</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">3dip</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 列表样式设置 -->
    <style name="listitem_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 列表样式设置 -->
    <style name="listitem_title2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 列表样式设置 -->
    <style name="listitem_title3">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="listitem_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="listitem_des">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#A26D51</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!-- 二级栏目样式 -->
    <style name="second_text_style">
        <item name="android:textSize">16.5sp</item>
        <item name="android:textColor">#A26D51</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.0</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>
    <!-- 按钮样式设置 -->
    <style name="back_btn" parent="button_style">
        <item name="android:background">@drawable/back_btn</item>
    </style>
    <!-- 设置按钮背景设置 -->
    <style name="setting_top_bg">
        <item name="android:padding">15dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/st_top_bg</item>
        <item name="android:onClick">things</item>
    </style>

    <style name="setting_center_bg">
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">things</item>
    </style>

    <style name="setting_botton_bg">
        <item name="android:padding">15dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:onClick">things</item>
    </style>

    <style name="setting_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#8b8b8b</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 设置相关界面标题样式 -->
    <style name="setting_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#f35336</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="AnimationActivity" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>
    <!-- public more xml style -->
    <style name="more_text_style">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">12.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:drawableRight">@drawable/jiantou</item>
        <item name="android:drawablePadding">6.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <!-- public more divider xml style -->
    <style name="more_divider_style_new">
        <item name="android:background">@color/more_divider_color</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="My_Dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/touming</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- for bottom popupWindow -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- for CustomDialog -->
    <style name="My_Theme_Dialog_Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="base">
        <item name="android:padding">10dp</item>
        <!--
        item name="android:layout_marginLeft">0dp</item>
		<item name="android:layout_marginRight">0dp</item
        -->
    </style>

    <style name="title" parent="@style/base">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="@style/base">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dialog">
        <item name="android:fullDark">@drawable/custom_dialog_body</item>
        <item name="android:topDark">@drawable/custom_dialog_title</item>
        <item name="android:centerDark">@drawable/custom_dialog_body</item>
        <item name="android:bottomDark">@drawable/custom_dialog_footer</item>
        <item name="android:fullBright">@drawable/custom_dialog_body</item>
        <item name="android:centerBright">@drawable/custom_dialog_body</item>
        <item name="android:bottomBright">@drawable/custom_dialog_footer</item>
        <item name="android:bottomMedium">@drawable/custom_dialog_footer</item>
        <item name="android:centerMedium">@drawable/custom_dialog_body</item>
    </style>
    <!-- for custom dialog end -->

</resources>