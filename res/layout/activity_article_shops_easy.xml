<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <include layout="@layout/title_items" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#f6f1ef"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/title_zbcy_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_zbcy_iv"
                    android:layout_width="95dp"
                    android:layout_height="88dp"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/list_qst"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="14dp" >

                    <TextView
                        android:id="@+id/title_zbcy_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="商家名称"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/phone_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/phone_tb3"
                        android:gravity="center_vertical"
                        android:paddingLeft="45dp"
                        android:paddingRight="10dp"
                        android:text="4000-666-458"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dp" >

                <RelativeLayout
                    android:id="@+id/dingwei_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_bg1" >

                    <ImageView
                        android:id="@+id/dw_iv"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/addr_tb" />

                    <TextView
                        android:id="@+id/dw_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/imageView1"
                        android:layout_toRightOf="@id/dw_iv"
                        android:singleLine="true"
                        android:text="地点"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/jiantou" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/xianlu_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/dingwei_rl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/input_bg1" >

                    <ImageView
                        android:id="@+id/xl_iv"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/xlxz_tb" />

                    <TextView
                        android:id="@+id/xl_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/xl_iv"
                        android:text="线路选择"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/jiantou" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/jieshao_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/xianlu_rl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_bg2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cpjs_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="产品简介"
                        android:textColor="#222222"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/jsnr_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="介绍内容oijwoitjowjtojqtjqwjt"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/xuxian" />

                    <TextView
                        android:id="@+id/sjjs_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="商家简介"
                        android:textColor="#222222"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/jsnr_tv2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="介绍内容oijwoitjowjtojqtjqwjt"
                        android:textColor="#666666"
                        android:textSize="14sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/pinglun_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/jieshao_rl"
                    android:background="@drawable/my_bg"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/plcount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textColor="#929292"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/plnr_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pinglun_rl"
                    android:layout_margin="10dp"
                    android:background="@drawable/input_bg2" >

                    <TextView
                        android:id="@+id/plnr_1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#929292"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/plnr_1_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#040000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_1_tv"
                        android:layout_marginLeft="10dp"
                        android:textColor="#929292"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/xuxian_ve6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/date_text1"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/more_fgx" />

                    <TextView
                        android:id="@+id/plnr_2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xuxian_ve6"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#929292"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/plnr_2_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_2"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#040000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_2_tv"
                        android:layout_marginLeft="10dp"
                        android:textColor="#929292"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/xuxian_ve7"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/date_text2"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/more_fgx" />

                    <TextView
                        android:id="@+id/plnr_3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xuxian_ve7"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#929292"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/plnr_3_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_3"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#040000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/plnr_3_tv"
                        android:layout_marginLeft="10dp"
                        android:textColor="#929292"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:id="@+id/select_all_pl"
                        android:layout_width="fill_parent"
                        android:layout_height="120dp"
                        android:layout_below="@id/date_text3"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff" >

                        <ImageView
                            android:id="@+id/fgx1_iv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/more_fgx" />

                        <Button
                            android:id="@+id/ckqbpl_tv"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/fgx1_iv"
                            android:layout_centerInParent="true"
                            android:background="#efefef"
                            android:gravity="center"
                            android:text="《查看全部评价》"
                            android:textColor="#8e8e8e"
                            android:textSize="17sp" />

                        <ImageView
                            android:id="@+id/fgx2_iv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ckqbpl_tv"
                            android:background="@drawable/more_fgx" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/zwpl_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/plnr_rl"
                    android:layout_margin="10dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="暂无评论" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>