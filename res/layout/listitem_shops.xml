<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:paddingBottom="8dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/listitem_icon"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/list_qst"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/listitem_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listitem_title"
            style="@style/listitem_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="标题asfgsr而我也是呀而沙哑而乌鸦喝水日饿死人员和燃烧也涮羊肉事业" />
        
        <TextView
            android:id="@+id/listitem_summary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="将忒噢金话筒奖阿瓦二娃条件外婆阿娇"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#929292"
            android:layout_marginTop="5dp"/>
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="30dp" 
            android:layout_marginTop="5dp"                     
            >
            <TextView 
                android:id="@+id/youhui_tv"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	android:layout_centerVertical="true"               
                android:text="优惠："
                android:textSize="12sp"
                android:textColor="#000000"/>
             <TextView 
                 android:id="@+id/listitem_youhui"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:layout_toRightOf="@id/youhui_tv"
                 android:text="10"
                 android:layout_centerVertical="true"
                 android:textSize="23sp"
                 android:textColor="#f75000"/>
             <TextView 
                 android:id="@+id/bfh_tv"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:text="%"
                 android:layout_toRightOf="@id/listitem_youhui"
                 android:layout_alignParentBottom="true"
                 android:textColor="#f75000"
                 android:layout_marginBottom="2dp"
                 android:textSize="13sp"/>
             <TextView 
                 android:id="@+id/listitem_juli"
             	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content" 
            	 android:layout_alignParentRight="true"
            	 android:layout_marginRight="10dp"
            	 android:text="1.35km"
            	 android:layout_centerVertical="true"
            	 android:textSize="12sp"
            	 android:textColor="#8e8e8e"                 
                 />
             <ImageView 
                 android:id="@+id/juli_iv"
             	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                 
                 android:layout_toLeftOf="@id/listitem_juli"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="2dp"
                 android:layout_marginLeft="20dp"
                 android:src="@drawable/juli_tb"/>
            
        </RelativeLayout>
            
        <TextView
            android:id="@+id/listitem_des"
            style="@style/listitem_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:visibility="gone"
            android:text="jafoweoajoew傲骨i特价阿伟纪委案提交哦我建瓯台 瓦尔特为集团军 "
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_phone_bg"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/item_phone_mark" />

            <TextView
                android:id="@+id/listitem_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>