<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >
   
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/nxms_view_rl1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_margin="8dp" >

        <ImageView
            android:id="@+id/listitem_icon1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/list_qst"
            android:scaleType="fitXY" />
        
        <RelativeLayout 
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#40ae0000"            
            >
            <TextView 
                android:id="@+id/youhui_tv1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:layout_marginLeft="10dp" 
            	android:layout_alignParentBottom="true"             
                android:text="优惠："
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
             <TextView 
                 android:id="@+id/listitem_youhui1"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:layout_toRightOf="@id/youhui_tv1"
                 android:text="10"
                android:layout_marginBottom="3dp"
            	android:layout_alignParentBottom="true"  
                 android:textSize="23sp"
                 android:textColor="#ffffff"/>
             <TextView 
                 android:id="@+id/bfh_tv1"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:text="%"
                 android:layout_marginBottom="5dp"
                 android:layout_toRightOf="@id/listitem_youhui1"
                 android:layout_alignParentBottom="true"
                 android:textColor="#ffffff"
                 android:textSize="13sp"/>
          </RelativeLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/nxms_view_rl2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_margin="8dp" >

        <ImageView
            android:id="@+id/listitem_icon2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/list_qst"
            android:scaleType="fitXY" />
        <RelativeLayout 
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#40ae0000"    
            >
            <TextView 
                android:id="@+id/youhui_tv2"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"  
            	android:layout_alignParentBottom="true" 
            	android:layout_marginLeft="10dp"               
                android:text="优惠："
                android:layout_marginBottom="3dp"
                android:textSize="12sp"
                android:textColor="#ffffff"/>
             <TextView 
                 android:id="@+id/listitem_youhui2"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:layout_toRightOf="@id/youhui_tv2"
                 android:text="10"
            	android:layout_alignParentBottom="true"  
                 android:textSize="23sp"
                android:layout_marginBottom="3dp"
                 android:textColor="#ffffff"/>
             <TextView 
                 android:id="@+id/bfh_tv2"
            	 android:layout_width="wrap_content"
            	 android:layout_height="wrap_content"                   
                 android:text="%"
                android:layout_marginBottom="5dp"
                 android:layout_toRightOf="@id/listitem_youhui2"
                 android:layout_alignParentBottom="true"
                 android:textColor="#ffffff"
                 android:textSize="13sp"/>
            </RelativeLayout>       
    </RelativeLayout>  
   </LinearLayout>
</RelativeLayout>