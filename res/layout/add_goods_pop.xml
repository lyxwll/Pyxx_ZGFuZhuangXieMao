<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
 
  
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginBottom="5dp"
            android:orientation="vertical" >
 
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="30dp"
	                android:text="请选择颜色分类、尺码"
	                android:textSize="12sp"
	                android:textColor="#929292"
	                android:gravity="center_vertical"
	                android:paddingLeft="5dp"
                    /> 
                           
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="35dp"
	                android:text="尺码"
	                android:textSize="16sp"
	                android:textColor="#222222"
	                android:gravity="center_vertical"
	                android:paddingLeft="5dp"
                    /> 
                    <LinearLayout 
		                android:layout_width="fill_parent"
		                android:layout_height="45dp"
		                android:orientation="horizontal"
                        >
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="S"
			                android:textSize="18sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_cm_bg2"
			                android:layout_marginLeft="5dp"
                            />
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="M"
			                android:textSize="18sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_cm_bg1"
			                android:layout_marginLeft="15dp"
                            />
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="L"
			                android:textSize="18sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_cm_bg1"
			                android:layout_marginLeft="15dp"
                            />
                    </LinearLayout>  
                         
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="35dp"
	                android:text="颜色分类"
	                android:textSize="16sp"
	                android:textColor="#222222"
	                android:gravity="center_vertical"
	                android:paddingLeft="5dp"
                    />   
                    <LinearLayout 
		                android:layout_width="fill_parent"
		                android:layout_height="45dp"
		                android:orientation="horizontal"
                        >
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="红色"
			                android:textSize="16sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_ys_bg2"
			                android:layout_marginLeft="5dp"
                            />
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="黑色"
			                android:textSize="16sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_ys_bg1"
			                android:layout_marginLeft="15dp"
                            />
                        <TextView 
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:text="白色"
			                android:textSize="16sp"
			                android:textColor="#222222"
			                android:gravity="center"
			                android:background="@drawable/gwc_ys_bg1"
			                android:layout_marginLeft="15dp"
                            />
                    </LinearLayout>        
                         
                <TextView 
	                android:layout_width="fill_parent"
	                android:layout_height="35dp"
	                android:text="购买数量"
	                android:textSize="16sp"
	                android:textColor="#222222"
	                android:gravity="center_vertical"
	                android:paddingLeft="5dp"
                    />        
 
	                
	                <RelativeLayout 
		                    android:id="@+id/count_rl"
			                android:layout_width="fill_parent"
			                android:layout_height="44dp" 	 >
                        
	                    
	                    
	                  <ImageView 
		                      android:id="@+id/jian_iv"
			                  android:layout_width="wrap_content"
			                  android:layout_height="30dp"
		                      android:layout_marginLeft="15dp"
			                  android:layout_centerVertical="true"	                      
		                      android:src="@drawable/gwc_jian_tb"/> 
	                   <TextView
		                      android:id="@+id/count_text"
			                  android:layout_width="80dp"
			                  android:layout_height="30dp"
			                  android:layout_centerVertical="true"
		                      android:layout_marginLeft="15dp"
			                  android:layout_toRightOf="@id/jian_iv"	 
			                  android:gravity="center"                      
		                       android:text="1"
		                       android:textSize="18sp"
		                       android:textColor="@color/biaoti_color"
		                       android:background="@drawable/gwc_count_bg"/> 
	                  <ImageView 
		                      android:id="@+id/jia_iv"
			                  android:layout_width="wrap_content"
			                  android:layout_height="30dp"
			                  android:layout_centerVertical="true"
		                      android:layout_marginLeft="15dp"	
			                  android:layout_toRightOf="@id/count_text"	                      
		                      android:src="@drawable/gwc_jia_tb"/> 	 

	                  
	                  <Button
	                       android:id="@+id/add_btn" 
		                   android:layout_width="80dp"
		                   android:layout_height="30dp"
		                   android:layout_centerVertical="true"
		                   android:layout_alignParentRight="true"
		                   android:layout_marginRight="10dp" 
		                   android:text="确定 "
		                   android:gravity="center"
		                   android:textSize="16sp"
		                   android:textColor="#ffffff"		                      
	                       android:background="@drawable/btn_bg1"/>
	                               
	                </RelativeLayout>     
	               
        </LinearLayout> 
</RelativeLayout>