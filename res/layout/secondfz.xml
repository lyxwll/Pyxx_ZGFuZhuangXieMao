<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg" >

    <RelativeLayout
        android:id="@+id/main_rl"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@drawable/biaoti_bg" >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/return_tb1" />

        <TextView
            android:id="@+id/title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="服装"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:visibility="gone" >

            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/first_search_bg" />

            <ImageView
                android:id="@+id/search_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/search_tb" />

            <EditText
                android:id="@+id/search_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search_iv"
                android:hint="请输入您要搜索的内容"
                android:textColor="#040000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/search_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search_tv"
                android:paddingRight="20dp"
                android:text="搜索"
                android:textColor="#040000"
                android:textSize="16sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/more_fgx" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/erji_ll"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/main_rl"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/type_1_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#dedede" />

        <TextView
            android:id="@+id/type_2_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销量"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#dedede" />

        <TextView
            android:id="@+id/type_3_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="价格"
            android:textColor="#222222"
            android:textSize="16sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="#dedede" />

        <TextView
            android:id="@+id/type_4_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信用"
            android:textColor="#222222"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fgx_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/erji_ll"
        android:background="@drawable/list_fgx" />

    <RelativeLayout
        android:id="@+id/part_second_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/fgx_iv" >
    </RelativeLayout>

</RelativeLayout>