<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/nxms_view_rl1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/listitem_icon1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/list_qst"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nxms_view_rl2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/listitem_icon2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/list_qst"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nxms_view_rl3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/listitem_icon3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/list_qst"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>