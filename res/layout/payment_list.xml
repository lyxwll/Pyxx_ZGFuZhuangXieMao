<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="8dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/listitem_icon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/list_qst"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/listitem_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listitem_title"
            style="@style/listitem_title2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="标题" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/listitem_ys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色分类：2"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/listitem_cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="尺码：m"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/listitem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量：2"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/listitem_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="￥119.00"
                android:textColor="#8e8e8e"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>