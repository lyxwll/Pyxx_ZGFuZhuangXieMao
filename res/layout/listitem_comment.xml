<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="9dp" >

        <TextView
            android:id="@+id/article_comment_title"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="正在加载"
            android:textColor="@color/gread"
            android:textSize="@dimen/text_15" />

        <RatingBar
            android:id="@+id/comment_layout_listview_ratingbar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:progressDrawable="@drawable/bg_star_rating" >
        </RatingBar>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/article_comment_des"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentlistview_nametext"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/article_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_comment_des"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text="2012—12—6   06:30"
            android:textColor="@color/listv_color_C4"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="9dp"
        android:visibility="invisible" />

</LinearLayout>