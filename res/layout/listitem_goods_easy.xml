<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="175dp"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/listitem_icon"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:background="@drawable/list_qst"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" >
       <RelativeLayout 
            android:id="@+id/title_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="25dp"
	        android:background="#98ffffff"           
           >
        <TextView
            android:id="@+id/listitem_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="标题asfgsr而我也是呀而沙哑而乌鸦喝水日饿死人员和燃烧也涮羊肉事业"
            android:textColor="#040000"
             />
        
        <TextView
            android:id="@+id/listitem_jiage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2555元    抢购价"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="#040000"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
       </RelativeLayout>
       <TextView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/title_rl" 
            android:background="#ffffff"          
           />
    </RelativeLayout>

</RelativeLayout>